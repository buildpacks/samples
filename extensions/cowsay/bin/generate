#!/usr/bin/env bash
set -eo pipefail

# 1. GET ARGS
output_dir=$CNB_OUTPUT_DIR

# 2. GENERATE build.Dockerfile
cat >>"${output_dir}/build.Dockerfile" <<EOL
ARG base_image
FROM \${base_image}

USER root
RUN apk update && apk add --repository https://dl-cdn.alpinelinux.org/alpine/edge/testing cowsay

ARG user_id
USER \${user_id}
EOL
