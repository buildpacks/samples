#!/usr/bin/env bash
set -eo pipefail

echo "---> Bash Script buildpack"

# 1. INPUT ARGUMENTS
layers_dir=$1

# 2. SET DEFAULT START COMMAND
cat >> "${layers_dir}/launch.toml" <<EOL
[[processes]]
type = "web"
command = "./app.sh"
EOL

# LIST CONTENTS
echo 
echo "Here are the contents of the current working directory:"
ls -alHR
